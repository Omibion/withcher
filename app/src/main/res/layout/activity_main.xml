<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- TextView en la parte superior -->
    <TextView
        android:id="@+id/text_bestiary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enciclopedya of enemies" />

    <!-- Segundo TextView debajo del primero -->
    <TextView
        android:id="@+id/text_bestiary2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bestiary" />

    <!-- Primer RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcyListbest"
        android:layout_width="match_parent"

        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Segundo RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcyListmons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
